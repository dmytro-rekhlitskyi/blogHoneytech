{% extends 'layouts/base.html.twig' %}

{% block title %}{% if post.id %}Edit Post{% else %}Create Post{% endif %}{% endblock %}

{% block body %}
<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="list__flash list__flash--{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="form">
        <div class="form__header">
            <h1 class="form__title">{% if post.id %}Edit Post{% else %}Create Post{% endif %}</h1>
            <a href="{{ path('front_posts') }}" class="form__back-btn">
                Back to Posts
            </a>
        </div>

        <div class="form__content">
            {{ form_start(form, {'attr': {'class': 'form__form'}}) }}
                <div class="form__field">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form__label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form__input'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="form__field">
                    {{ form_label(form.body, null, {'label_attr': {'class': 'form__label'}}) }}
                    {{ form_widget(form.body, {'attr': {'class': 'form__input'}}) }}
                    {{ form_errors(form.body) }}
                </div>

                <div class="form__field">
                    {{ form_label(form.tags, null, {'label_attr': {'class': 'form__label'}}) }}
                    {{ form_widget(form.tags, {'attr': {'class': 'form__input'}}) }}
                    {{ form_errors(form.tags) }}
                </div>

                <div class="form__actions">
                    <button type="submit" class="form__submit-btn">
                        {% if post.id %}Update{% else %}Create{% endif %}
                    </button>
                    <a href="{{ path('front_posts') }}" class="form__cancel-btn">
                        Cancel
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

